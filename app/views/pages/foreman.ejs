<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>
    
    <div class="jumbotron">
      <h1>Foreman:</h1>
      <hr />
      <div>
        <h3>Add Foreman</h3>
        <form action="/api/foreman" method="post" autocomplete="off">
          <input type="text" name="first_name" placeholder="First Name" />
          <input type="text" name="last_name" placeholder="Last Name" />
          <select
            type="location_code"
            name="location_code"
            placeholder="location code"
          >
            <% for(var i = 0; i < locations.length; i++) { %>
            <option value="<%= locations[i].display_name %>">
              <%= locations[i].display_name %>
            </option>
            <% } %>
          </select>
          <button type="submit" name="submit">Submit</button>
        </form>
      </div>
      <hr />
      <div>
        <h3>Change Foreman Location</h3>
        <form action="/api/foreman/update" method="post" autocomplete="off">
          <select type="foreman" name="foreman" placeholder="foreman">
            <% for(var i = 0; i < foreman.length; i++) { %>
            <option
              value="<%= foreman[i].first_name  + " " + foreman[i].last_name %>"
            >
              <%= foreman[i].first_name + " " + foreman[i].last_name %>
            </option>
            <% } %>
          </select>
          <select type="location_code" name="location_code" placeholder="location code">
            <% for(var i = 0; i < locations.length; i++) { %>
            <option value="<%= locations[i].display_name %>">
              <%= locations[i].display_name %>
            </option>
            <% } %>
          </select>
          <button type="submit" name="submit">Submit</button>
        </form>
      </div>
      <hr />
      <div>
        <h3>Remove Foreman</h3>
        <form
          action="/api/foreman/remove"
          method="post"
          autocomplete="off"
        >
          <select type="foreman" name="foreman" placeholder="foreman">
            <% for(var i = 0; i < foreman.length; i++) { %>
            <option
              value="<%= foreman[i].first_name + " " + foreman[i].last_name %>"
            >
              <%= foreman[i].first_name + " " + foreman[i].last_name %>
            </option>
            <% } %>
          </select>
          <button type="submit" name="submit">Submit</button>
        </form>
      </div>
      <hr />
      <div>
        <div class="show_table">
          <h3>Foreman Table:</h3>
          <table>
            <tr>
              <th>Name</th>
              <th>Current Location</th>
              <th>Foreman ID</th>
            </tr>
            <% for (var i = 0; i < foreman.length; i++) { %>
            <tr>
              <td><%= foreman[i].first_name + " " + foreman[i].last_name %></td>
              <td><%= foreman[i].current_location %></td>
              <td><%= foreman[i].foreman_id %> </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>
    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
