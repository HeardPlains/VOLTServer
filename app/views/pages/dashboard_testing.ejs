    <script>
      function exportTableToExcel(tableID, filename = "") {
        var downloadLink;
        var dataType = "application/vnd.ms-excel";
        var tableSelect = document.getElementById(tableID);
        var tableHTML = tableSelect.outerHTML.replace(/ /g, "%20");

        // Specify file name
        filename = filename ? filename + ".xls" : "excel_data.xls";

        // Create download link element
        downloadLink = document.createElement("a");

        document.body.appendChild(downloadLink);

        if (navigator.msSaveOrOpenBlob) {
          var blob = new Blob(["\ufeff", tableHTML], {
            type: dataType,
          });
          navigator.msSaveOrOpenBlob(blob, filename);
        } else {
          // Create a link to the file
          downloadLink.href = "data:" + dataType + ", " + tableHTML;

          // Setting the file name
          downloadLink.download = filename;

          //triggering the function
          downloadLink.click();
        }
      }
      function editTable(button) {
        //console.log(button.parentNode.parentNode.id);

        var tableSelect = document.getElementById(
          button.parentNode.parentNode.id
        );
        var buttonParent = button.parentNode;
        var id = tableSelect.id;

        if (button.innerHTML != "Submit Changes") {
          button.innerHTML = "Submit Changes";
          console.log(tableSelect.children.name);
          editcellText(
            tableSelect.children.name,
            "text",
            "name",
            "edit_name",
            tableSelect.children.name.innerHTML
          );
          editcellNumber(
            tableSelect.children.hours,
            "number",
            "hours",
            "edit_hours",
            0.1,
            tableSelect.children.hours.innerHTML
          );
          editCellListLocations(
            tableSelect.children.location,
            "location_code",
            "edit_location",
            tableSelect.children.location.innerHTML
          );
          editCellListTasks(
            tableSelect.children.task,
            "task_code",
            "edit_task",
            tableSelect.children.task.innerHTML
          );
          editcellDate(
            tableSelect.children.date,
            "date",
            "date",
            "edit_date",
            tableSelect.children.date.innerHTML
          );
        } else {
          document.getElementById("first_name_edit." + id).value =
            tableSelect.children.name.children.edit_name.value.split(" ")[0];
          document.getElementById("last_name_edit." + id).value =
            tableSelect.children.name.children.edit_name.value.split(" ")[1];
          document.getElementById("hours_edit." + id).value =
            tableSelect.children.hours.children.edit_hours.value;
          document.getElementById("location_edit." + id).value =
            tableSelect.children.location.children.edit_location.value;
          document.getElementById("task_edit." + id).value =
            tableSelect.children.task.children.edit_task.value;
          var date =
            tableSelect.children.date.children.edit_date.value.split("-");
          var formatedDate = date[1] + "/" + date[2] + "/" + date[0];
          document.getElementById("date_edit." + id).value = formatedDate;
          document.getElementById("editForm." + id).submit();
        }
      }

      function reformatDate(date) {
        var dateArray = date.split("/");
        var formatDate = dateArray[2] + "-" + dateArray[0] + "-" + dateArray[1];
        return formatDate;
      }

      function editcellText(element, type, name, id, placeholder) {
        g = document.createElement("input");
        g.setAttribute("type", type);
        g.setAttribute("id", id);
        g.setAttribute("name", name);
        g.setAttribute("value", placeholder);
        element.innerHTML = "";
        element.appendChild(g);
      }
      function editcellDate(element, type, name, id, placeholder) {
        g = document.createElement("input");
        g.setAttribute("type", type);
        g.setAttribute("name", name);
        g.setAttribute("id", id);
        g.setAttribute("value", reformatDate(placeholder));
        element.innerHTML = "";
        element.appendChild(g);
      }
      function editcellNumber(element, type, name, id, step, placeholder) {
        g = document.createElement("input");
        g.setAttribute("type", type);
        g.setAttribute("id", id);
        g.setAttribute("name", name);
        g.setAttribute("step", step);
        g.setAttribute("value", placeholder);
        element.innerHTML = "";
        element.appendChild(g);
      }
      function editCellListLocations(element, name, id, placeholder) {
        select = document.createElement("select");
        select.setAttribute("name", name);
        select.setAttribute("id", id);
        select.setAttribute("placeholder", placeholder);
        var locations = [];
        locations.push(placeholder);
        ("<% for (var i=0, len = locations.length; i<len; i++) { %>");
        locations.push("<%- locations[i].display_name %>");
        (" <% } %>");
        console.table(locations);
        for (var i = 0; i < locations.length; i++) {
          e = document.createElement("option");
          e.setAttribute("value", locations[i]);
          e.innerHTML = locations[i];
          select.appendChild(e);
        }
        element.innerHTML = "";
        element.appendChild(select);
      }
      function editCellListTasks(element, name, id, placeholder) {
        select = document.createElement("select");
        select.setAttribute("name", name);
        select.setAttribute("id", id);
        select.setAttribute("placeholder", placeholder);
        var tasks = [];
        tasks.push(placeholder);
        ("<% for (var i=0, len = tasks.length; i<len; i++) { %>");
        tasks.push("<%- tasks[i].display_name %>");
        (" <% } %>");
        console.table(tasks);
        for (var i = 0; i < tasks.length; i++) {
          e = document.createElement("option");
          e.setAttribute("value", tasks[i]);
          e.innerHTML = tasks[i];
          select.appendChild(e);
        }
        element.innerHTML = "";
        element.appendChild(select);
      }
    </script>
