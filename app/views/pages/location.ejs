<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <div class="jumbotron">
      <h1>Locations:</h1>
      <hr />
      <div>
        <h3>Add Location</h3>
        <form action="/api/location_data" method="post" autocomplete="off">
          <input type="text" name="display_name" placeholder="Location Name" />
          <button type="submit" name="submit">Submit</button>
        </form>
      </div>
      <hr />
      <div>
        <h3>Remove Location</h3>
        <form
          action="/api/location_data/remove"
          method="post"
          autocomplete="off"
        >
          <select type="location" name="location" placeholder="location">
            <% for(var i = 0; i < locations.length; i++) { %>
            <option value="<%= locations[i].display_name %>">
              <%= locations[i].display_name %>
            </option>
            <% } %>
          </select>
          <button type="submit" name="submit">Submit</button>
        </form>
      </div>
      <hr />
      <div>
        <div class="show_table">
          <h3>Locations Table:</h3>
          <table>
            <tr>
              <th>Name</th>
              <th>ID</th>
            </tr>
            <% for (var i = 0; i < locations.length; i++) { %>
            <tr>
              <td><%= locations[i].id %></td>
              <td><%= locations[i].display_name %></td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>
    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
